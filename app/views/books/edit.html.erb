<h1 class="books-title">Editing Book</h1>

<% if @book.errors.any? %>
    <div class="error-box">
      <div class="error-box-head">
         <%= @book.errors.count %> errors prohibited this book from being saved:
      </div>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with(model: @book, url: book_path(@book.id), method: :patch) do |f| %>
  
  <div class="books-form-chunk">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="books-form-chunk">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="books-form-chunk">
    <%= f.submit "Update Book" %>
  </div>

<% end %>

<p class="links">
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
</p>