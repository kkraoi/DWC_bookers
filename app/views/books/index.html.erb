<h1>Books</h1>

<%# フラッシュメッセージ %>
<p></p>

<%# 一覧 %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <p>
            <%= link_to "Show", book_path(book.id) %>
          </p>
        </td>
        <td>
          <p>
            <%= link_to "Edit", edit_book_path(book.id) %>
          </p>
        </td>
        <td>
          <p>
            <%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?"} %>
          </p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%# 新規登録 %>
<div>
  <h2>New book</h2>
  <%= form_with(model: @book, url: '/books', method: :post) do |f| %>
    <h3>Title</h3>
    <%= f.text_field :title %>

    <h3>Body</h3>
    <%= f.text_area :body %>

    <%= f.submit "Create Book" %>
  <% end %>
</div>